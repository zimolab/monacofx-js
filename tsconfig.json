{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2015",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./node_modules",
    "typeRoots": ["node_modules/@types"]
  },
  "lib": [
    "dom", "es5", "es2015.collection", "es2015.promise"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}